<%= stylesheet_link_tag    'home', media: 'all' %>
<%= javascript_include_tag 'home' %>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
<% if current_user %>

  <div id = "add-address">
    <button id = "add" type="button" name="add">Add Address</button>
  </div>
  <div id="pac-container">
    <ul id = "address-container">
      <li id = "address">
      <input id="pac-input" type="text"
          value="<%=  %>"></li>
      <li id = "address"><input id="pac-output" type="text"
          placeholder="Point B"></li>
    </ul>
    <input type="button" value = "Refresh Page" onClick = "window.location.reload()">
    <select id = "categories">
      <option value="restaurants">Restaurant</option>
      <option value="bars">Bar</option>
      <option value="cafe">Cafe</option>
      <option value="fitness">Fitness</option>
      <option value="movietheaters">Movie Theater</option>
      <option value="discgolf">Golf</option>
      <option value="bowling">Bowling</option>
      <option value="museums">Museums</option>
      <option value="festivals">Festivals</option>
    </select>
  </div>

  <h3>Set Radius</h3>

  <div id="slidecontainer">
    <input type="range" min="500" max="2000" value="50" class="slider" id="myRange">
    <p><span id="demo"></span> Meters</p>
  </div>

  <input id = "submit" type="submit" name="submit" value="submit">

  <div id="map"></div>
  <div class="photos">
    <div id="yelp_info">

    </div>
  </div>

<% else %>

  <div id = "add-address" style="display:none">
    <button id = "add" type="button" name="add">Add Address</button>
  </div>
  <div id="pac-container">
    <ul id = "address-container">
      <li id = "address">
      <input id="pac-input" type="text"
          placeholder="Point A"></li>
      <li id = "address"><input id="pac-output" type="text"
          placeholder="Point B"></li>
    </ul>
    <input type="button" value = "Refresh Page" onClick = "window.location.reload()" style="display:none">
    <select id = "categories" style="display:none">
      <option value="restaurants">Restaurant</option>
      <option value="bars">Bar</option>
      <option value="cafe">Cafe</option>
      <option value="fitness">Fitness</option>
      <option value="movietheaters">Movie Theater</option>
      <option value="discgolf">Golf</option>
      <option value="bowling">Bowling</option>
      <option value="museums">Museums</option>
      <option value="festivals">Festivals</option>
    </select>
  </div>

  <h3 style="display:none">Set Radius</h3>

  <div id="slidecontainer" style="display:none">
    <input type="range" min="500" max="2000" value="50" class="slider" id="myRange">
    <p><span id="demo"></span> Meters</p>
  </div>

  <input id = "submit" type="submit" name="submit" value="submit">

  <div id="map"></div>
  <div class="photos">
    <div id="yelp_info">

    </div>
    </div>

<% end %>
