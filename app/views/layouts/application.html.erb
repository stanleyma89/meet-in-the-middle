<!DOCTYPE html>
<html>
  <head>

    <title>MeetInTheMiddle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
      <header class="header_nav">
        <h1 class="logo">MeetInTheMiddle</h1>

        <nav class="site-nav">
          <% if session[:user_id] != nil %>
            <%= link_to "Logout", :logout%>
          <% else %>
            <%= link_to "Register", new_user_path %> |
            <%= link_to "Login", :login %>
          <% end %>
        </nav>
      </header>

      <% flash.each do |key, message| %>
        <div class="flash-<%= key %>"><%= message %></div>
      <% end %>

      <!-- <main> -->
        <%= yield %>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwrmLv6COx0ygAhr9pKrEbDRcaoFQORyM&callback=initMap&libraries=geometry,places"></script>
      <!-- </main> -->

      <footer class="site-footer">
        <small>Bitmaker Final Project</small>
      </footer>
    </body>

</html>
